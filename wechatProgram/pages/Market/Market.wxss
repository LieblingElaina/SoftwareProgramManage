usermotto {
    margin-top: 200px;
}

.date-container {
    padding: 15rpx 30rpx;
    color: #666;
    font-size: 28rpx;
    background: #f5f5f5;
}

.section-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
    text-align: center;
    padding: 0;
    color: #333;
}

.scroll-view {
    width: 100%;
    white-space: nowrap;
    padding: 0 15rpx;
}

.board-container {
    display: inline-flex;
    padding: 0 15rpx;
}

.board-item {
    display: inline-block;
    margin-right: 20rpx;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.board-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 10rpx;
}

.board-value {
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
}

.board-value.up {
    color: #f5222d;
}

.board-value.down {
    color: #52c41a;
}

.container {
    padding: 20rpx;
    background-color: #fff;
}

.container button {
    background-color: white;
    color: black;
    border: 1px solid black;
    border-radius: 5rpx;
    padding: 10rpx 20rpx;
}

.header {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
    margin-top: 30rpx;
    text-align: center;
}

.tabs {
    display: flex;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
    justify-content: space-around;
}

.tab-item {
    flex: 0 0 auto; 
    text-align: center;
    padding: 40rpx 40rpx; 
    font-size: 32rpx;
}

.tab-item.active {
    color: #1aad19;
    border-bottom: 2rpx solid #1aad19;
}

.table {
    width: 100%;
}

.table-header,
.table-row {
    display: flex;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
}

.header-item,
.row-item {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
}

.header-item {
    font-weight: bold;
}

.up {
    color: #f56c6c;
}

.down {
    color: #67c23a;
}

.stock-code {
    font-size: 20rpx;
    color: #999;
}    