.list {
  display: flex;
  align-items: center;
  margin: 10px;
  padding: 10px;
  background-color: #fff; 
  border: 1px solid #e1e1e1; 
  border-radius: 5px; 
}

.text {
  display: flex;
  margin: 10px;
  color: #b9b8b8;
  font-size: 14px;
}

.name-box {
  flex: 1;
  margin-right: 10px; 
}

.mini {
  color: grey;
  font-size: 12px;
}

.top {
  display: flex;
  flex-direction: column;
  flex: 1; 
}

.red {
  color: red; 
}

.green {
  color: green; 
}
.search-trigger {
  padding: 10px;
  background-color: #f0f0f0;
  text-align: center;
  margin: 10px;
  border-radius: 5px;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  margin: 10px;
  background-color: #f0f0f0; 
  border-radius: 5px; 
}

.search-bar text {
  font-size: 14px; 
  color: #333; 
}
