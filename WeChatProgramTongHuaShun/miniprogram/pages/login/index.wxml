<van-cell-group>
  <van-field bind:input="btn"  error-message="{{text}}" model:value="{{ phone }}" label="手机号" placeholder="请输入手机号" border="{{ false }}" />
  <van-field bind:input="validateCodeInput" error-message="{{codeErrorText}}" model:value="{{ validateCode }}" label="验证码" placeholder="请输入验证码" border="{{ false }}">
    <!-- 在van-field内部添加按钮 -->
    <van-button slot="button" size="small" color="{{ buttonColor }}" bind:click="getCode">获取验证码</van-button>
  </van-field>
</van-cell-group>
<view style="margin: 60px  20px;">

<!-- 当button变量为真时显示的红色登录按钮 -->
<van-button bind:tap="goBlack" wx:if="{{button}}" block round color="#ff0000">
  登录
</van-button>

<!-- 当button变量为假时显示的禁用的浅红色登录按钮 -->
<van-button wx:else disabled block round color="#ffb3b3">
  登录
</van-button>

</view>