.news-item {
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 5px;
  transition: background-color 0.3s;
}

.news-header text {
  font-weight: bold;
  color: #333;
}

.news-content {
  margin-top: 5px;
}

.news-title {
  font-size: 16px;
  color: #333;
}

.news-info {
  font-size: 12px;
  color: #666;
}

.search-bar {
  display: flex;
  padding: 10px;
  background-color: #f2f2f2;
}

.search-input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 8px;
  margin-right: 10px;
}

button {
  padding: 8px 12px;
  background-color: #e2510e; /* 深蓝色背景 */
  color: white;
  border: none;
  border-radius: 4px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center; /* 文本水平居中 */
  font-size: 14px; /* 调整字体大小 */
}

